{% extends '::base.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="col-sm-12">
                <h1><i class="fa fa-map"></i> Map</h1>
                <div class="panel panel-default" style="max-width: 550px;">
                    <div class="panel-heading">
                        <i class="fa fa-fort-awesome"></i> {{ kingdom.name }}
                    </div>
                    <div class="panel-body">
                        {{ dump(kingdom.mapTile) }}
                    </div>
                </div>

                {{ render(controller('CronkdBundle:Map:renderMap')) }}

                <a href="{{ path('kingdom_move') }}" class="btn">kingdom_move</a>
            </div>
        </div>
    </div>
{% endblock %}