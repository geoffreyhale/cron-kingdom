{% extends '::base.html.twig' %}

{% block content %}
    <h3>Users</h3>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Username</th>
            <th>Kingdoms</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>
                    {% for kingdom in user.kingdoms %}
                        <ul>
                            <li><a href="{{ path("kingdom_show", {'id': kingdom.id}) }}">{{ kingdom.name }}</a> (NW: {{ kingdom.networth }})</li>
                        </ul>
                    {% endfor %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}