{% extends '::base.html.twig' %}

{% block content %}

    <div class="row-fluid">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">World</h3>
            </div>
            <div class="panel-body">
                <a href="{{ path("world_show", {'id': world.id}) }}">{{ world.name }}</a>
            </div>
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Hour</th>
                    <th>Kingdoms</th>
                    <th>Networth</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>{{ world.tick }}</td>
                    <td>{{ world.kingdoms|length }}</td>
                    <td>{{ worldNetworth }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>

    {% if not userHasKingdom %}
        <div class="row-fluid">
            <div class="text-center">
                <a href="{{ path('kingdom_create') }}" class="btn btn-primary btn-lg">Create My Kingdom</a>
            </div>
            <hr />
        </div>
    {% else %}
        <div class="row-fluid">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Kingdom</h3>
                </div>
                <div class="panel-body">
                    <a href="{{ path("kingdom_show", {'id': kingdom.id}) }}">{{ kingdom.name }}</a>
                </div>
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        {% for resource in kingdom.resources %}
                            <th>{{ resource.resource.name }}</th>
                        {% endfor %}
                        <th>Networth</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        {% for resource in kingdom.resources %}
                            <td>{{ resource.quantity }}</td>
                        {% endfor %}
                        <td>{{ kingdom.networth }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}

    <div class="row-fluid">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Actions</h3>
            </div>
            <div class="panel-body">
                Coming soon!
            </div>
        </div>
    </div>

    <div class="row-fluid">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Queues</h3>
            </div>
            {% for queueData in queues %}
                {% include 'CronkdBundle:Kingdom:displayQueue.html.twig' %}
            {% endfor %}
        </div>
    </div>

{% endblock %}