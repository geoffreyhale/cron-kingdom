{% extends '::base.html.twig' %}

{% block content %}

    {% include 'CronkdBundle:World:overview.html.twig' %}

    {% if not userHasKingdom %}
        <div class="row-fluid">
            <div class="text-center">
                <a href="{{ path('kingdom_create') }}" class="btn btn-primary btn-lg">Create My Kingdom</a>
            </div>
            <hr />
        </div>
    {% else %}
        {% include 'CronkdBundle:Kingdom:overview.html.twig' %}
    {% endif %}

    <div class="row-fluid">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Actions</h3>
            </div>
            <div class="panel-body">
                <div class="btn-group" role="group">
                <a href="{{ path('action_produce_materials', {id: kingdom.id}) }}" class="btn btn-default">Produce Materials</a>
                <a href="{{ path('action_build_housing', {id: kingdom.id}) }}" class="btn btn-default">Build Housing</a>
                <a href="{{ path('action_train_military', {id: kingdom.id}) }}" class="btn btn-default">Train Military</a>
                <a href="{{ path('action_train_hacker', {id: kingdom.id}) }}" class="btn btn-default">Train Hackers</a>
                </div>
                <div class="btn-group" role="group">
                    <a href="{{ path('probe_send', {id: kingdom.id}) }}" class="btn btn-warning">Attempt Hack</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row-fluid">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Queues</h3>
            </div>
            {% include 'CronkdBundle:Kingdom:queues.html.twig' %}
        </div>
    </div>

{% endblock %}