{% extends '::base.html.twig' %}

{% block content %}
    <div class="container-fluid">
    <div class="row-fluid">
        <div class="col-md-12">

            <ol class="breadcrumb">
                <li><a href="{{ path('world_configure', {'world': world.id}) }}">Configure {{ world.name }}</a></li>
                <li><a href="{{ path('resource_update', {'id': resource.id}) }}">Update {{ resource.name }}</a></li>
                <li><a href="{{ path('resource_action_update', {'id': resourceAction.id}) }}">Update {{ resourceAction.verb }} Action</a></li>
                <li class="active">{{ resourceAction.verb }} {{ resourceAction.resource.name }}</li>
            </ol>

            <h1>Update {{ resourceAction.verb }} {{ resourceAction.resource.name }}</h1>

            <div class="pull-right">
                <a href="{{ path('resource_action_input_create', {'id': resourceAction.id}) }}" class="btn btn-info btn-sm"><i class="fa fa-plus"></i> Add</a>
            </div>
            <h2>Inputs</h2>
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Resource</th>
                    <th>Input Quantity</th>
                    <th>Requeue?</th>
                    <th>Queue Size</th>
                </tr>
                </thead>
                <tbody>
                {% for input in inputs %}
                    <tr>
                        <td>
                            {{ input.resource.name }}
                            <div class="pull-right">
                                <a href="{{ path('resource_action_input_update', {'id': input.id}) }}"><i class="fa fa-cogs btn btn-info"></i></a>
                                <a href="{{ path('resource_action_input_delete', {'id': input.id}) }}"><i class="fa fa-remove btn btn-danger"></i></a>

                            </div>
                        </td>
                        <td>{{ input.inputStrategy|capitalize }} {{ input.inputStrategy == 'static' ? '('~input.inputQuantity~')' }}</td>
                        <td>{{ input.requeue ? 'Yes' : 'No' }}</td>
                        <td>{{ input.queueSize }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    </div>
{% endblock %}