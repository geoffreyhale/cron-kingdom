{% extends '::base.html.twig' %}

{% block content %}
    <div class="row-fluid">
        <div class="col-sm-12">
            <h3>User</h3>
            {{ form_start(form, {'attr': {'class': 'form form-horizontal'}}) }}
            <div class="form-group">
                {{ form_row(form.vacation, {'attr': {'class': 'btn btn-danger'}}) }}
                <span class="text-danger">Warning: vacation mode cannot be unset for at least 24 hours.</span>
            </div>
            <div class="form-group">
                {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}