{% extends '::base.html.twig' %}

{% block content %}
    <div class="row-fluid">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-search"></i> Logs</h3>
            </div>
            <div class="panel-body">
                <table class="datatable table table-bordered">
                    <thead>
                    <tr>
                        <th>Tick</th>
                        <th>Log Type</th>
                        <th>Message</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for log in logs %}
                    <tr>
                        <td>{{ log.tick }}</td>
                        <td>{{ log.type }}</td>
                        <td>{{ log.log }}</td>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block js %}
    {{ parent() }}
    <script type="text/javascript">
        $('.datatable').DataTable();
    </script>
{% endblock %}