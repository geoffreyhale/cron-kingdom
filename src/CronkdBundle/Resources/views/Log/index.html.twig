{% extends '::base.html.twig' %}

{% block content %}
    <div class="row-fluid">
        <div class="col-sm-12">
            <ol class="breadcrumb">
                <li><a href="{{ path('homepage') }}">Dashboard</a></li>
                <li class="active">Event Log</li>
            </ol>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-search"></i> Logs</h3>
                </div>
                <div class="panel-body">
                    <p class="text-center">
                        <a href="#" class="btn btn-primary btn-lg logFilterBtn" data-filter="">All</a>
                        <a href="#" class="btn btn-primary btn-lg logFilterBtn" data-filter="queued">Queue</a>
                        <a href="#" class="btn btn-primary btn-lg logFilterBtn" data-filter="received">Dequeue</a>
                        <a href="#" class="btn btn-primary btn-lg logFilterBtn" data-filter="birthed">Birth</a>
                        <a href="#" class="btn btn-primary btn-lg logFilterBtn" data-filter="net worth">Net Worth</a>
                        <a href="#" class="btn btn-primary btn-lg logFilterBtn" data-filter="spied">Spy</a>
                    </p>
                    <table class="datatable table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Time</th>
                            <th>Tick</th>
                            <th>Message</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for log in logs %}
                        <tr class="{{ log.eventType == 'attack' ? 'danger' : '' }}">
                            <td>{{ log.id }}</td>
                            <td>{{ log.createdAt|date('Y-m-d h:i:s A') }}</td>
                            <td>{{ log.tick }}</td>
                            <td>
                                {% if log.eventType == 'attack' %}
                                    {{ log.attacker.name }} attacked {{ log.defender.name }} {{ log.success ? 'successfully' : 'unsuccessfully' }}
                                {% elseif log.eventType == 'queue' %}
                                    Queued {{ log.quantity }} {{ log.kingdomResource.resource.name }}
                                {% elseif log.eventType == 'dequeue' %}
                                    Received {{ log.quantity }} {{ log.kingdomResource.resource.name }}
                                {% elseif log.eventType == 'birth' %}
                                    Birthed {{ log.quantity }} {{ log.kingdomResource.resource.name }}
                                {% elseif log.eventType == 'net_worth' %}
                                    Net worth updated to {{ log.netWorth }}
                                {% elseif log.eventType == 'probe' %}
                                    {% if kingdom == log.prober %}
                                        Successfully spied on {{ log.probee.name }}
                                    {% elseif log.success %}
                                        Successfuly spied on by unknown kingdom
                                    {% else %}
                                        Failed to be spied on by {{ log.probee.name }}
                                    {% endif %}
                                {% endif %}
                            </td>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block js %}
    {{ parent() }}
    <script type="text/javascript">
        var table = $('.datatable').DataTable({
            'order': [ 0, 'DESC' ],
        });

        $('.logFilterBtn').click(function () {
            var filter = $(this).data('filter');
            var column = 2;
            if ('important' == filter) {
                column = 4;
            }
            console.log(column);
            console.log(filter);
            table
                //.columns(column)
                .search(filter)
                .draw()
            ;
        });
    </script>
{% endblock %}