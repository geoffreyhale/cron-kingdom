{% extends '::base.html.twig' %}

{% block content %}
    <div class="row-fluid">
        <div class="col-sm-12">
            <h1>Hack Results</h1>
            <div class="alert alert-{{ results.data.report.result ? 'success' : 'danger' }}">
                <h3 style="margin-top: 0px;">{{ results.data.report.result ? 'Success!' : 'Failure!' }}</h3>
                {% if results.data.report.result %}
                    <p>Hackers uncovered the following information:</p>
                    <ul>
                    {% for kingdomResource in results.data.report.data %}
                        <li>{{ kingdomResource.kingdom.name }} has {{ kingdomResource.quantity }} available {{ kingdomResource.resource.name }}</li>
                    {% endfor %}
                    </ul>
                {% else %}
                    <p>Hackers were not able to retrieve any information.</p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}