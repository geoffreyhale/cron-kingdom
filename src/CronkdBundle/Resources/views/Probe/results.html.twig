{% extends '::base.html.twig' %}

{% block content %}
    <div class="row-fluid">
        <div class="col-sm-12">
            <ol class="breadcrumb">
                <li><a href="{{ path('homepage') }}">Dashboard</a></li>
                <li><a href="{{ path('probe_send', {'id': kingdom.id}) }}">Attempt Hack</a></li>
                <li class="active">Hack Results</li>
            </ol>

            <h3>Hack Results</h3>
            {% if results.error is defined and results.error is not null %}
                <div class="alert alert-danger">
                    {{ results.error }}
                </div>
            {% else %}
                <div class="alert alert-{{ results.data.report.result ? 'success' : 'danger' }}">
                    <h3 style="margin-top: 0px;">{{ results.data.report.result ? 'Success!' : 'Failure!' }}</h3>
                    {% if results.data.report.result %}
                        <p>Hackers uncovered the following information:</p>
                        {% include 'CronkdBundle:Probe:resultsTable.html.twig' %}
                    {% else %}
                        <p>Hackers were not able to retrieve any information.</p>
                    {% endif %}
                </div>
            {% endif %}
        </div>
    </div>
    <div class="row-fluid">
        <div class="col-sm-12">
            {% if not results.data.report.result %}
                {{ form_start(form) }}
                {{ form_row(form.target) }}
                {{ form_row(form.quantity) }}
                {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                {{ form_end(form) }}
            {% else %}
                <a href="{{ path('probe_send', {'id': kingdom.id}) }}" class="btn btn-primary">Attack Another Kingdom</a>
            {% endif %}
        </div>
    </div>
{% endblock %}