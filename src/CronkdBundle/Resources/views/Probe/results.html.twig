{% extends '::base.html.twig' %}

{% block content %}
    <div class="row-fluid">
        <div class="col-sm-12">
            <ol class="breadcrumb">
                <li><a href="{{ path('homepage') }}">Dashboard</a></li>
                <li><a href="{{ path('probe_send', {'id': kingdom.id}) }}">Attempt Hack</a></li>
                <li class="active">Hack Results</li>
            </ol>

            <h3>Hack Results</h3>
            {% if results.error is defined and results.error is not null %}
                <div class="alert alert-danger">
                    {{ results.error }}
                </div>
            {% else %}
                <div class="alert alert-{{ results.data.report.result ? 'success' : 'danger' }}">
                    <h3 style="margin-top: 0px;">{{ results.data.report.result ? 'Success!' : 'Failure!' }}</h3>
                    {% if results.data.report.result %}
                        <p>Hackers uncovered the following information:</p>
                        {% include 'CronkdBundle:Probe:resultsTable.html.twig' %}
                    {% else %}
                        <p>Hackers were not able to retrieve any information.</p>
                    {% endif %}
                </div>
            {% endif %}
        </div>
    </div>
    <div class="row-fluid">
        <div class="col-sm-12">
            <div class="pull-left btn-group" role="group" aria-label="...">
            {% if results.error is not defined %}
                {% if results.data.report.result %}
                    <div class="alert alert-info">
                        <strong>{{ militaryToSend|number_format }}</strong> is the minimum number of Military to send for a successful attack.
                        <strong>{{ defenderBonusMilitaryToSend|number_format }}</strong> is the minimum number of Military to send to guarantee a successful attack <strong>if your opponent has the Defender Policy enabled.</strong>
                    </div>

                    {{ form_start(formAttack, {'class': 'form-inline', 'action': path('attack', {'id': kingdom.id})}) }}
                    {{ form_row(formAttack.target) }}
                    {{ form_row(formAttack.militaryAllocations) }}
                    {{ form_row(formAttack.submit, {'attr': {'class': 'btn btn-danger'}, 'label': 'Attack with '~militaryToSend|number_format~' Military'}) }}
                    {{ form_end(formAttack) }}
                    <br />
                    {{ form_start(formAttackStrongDefense, {'class': 'form-inline', 'action': path('attack', {'id': kingdom.id})}) }}
                    {{ form_row(formAttackStrongDefense.target) }}
                    {{ form_row(formAttackStrongDefense.militaryAllocations) }}
                    {{ form_row(formAttackStrongDefense.submit, {'attr': {'class': 'btn btn-danger'}, 'label': 'Attack with '~defenderBonusMilitaryToSend|number_format~' Military'}) }}
                    {{ form_end(formAttackStrongDefense) }}

                {% else %}
                    {{ form_start(formRehack) }}
                    {{ form_row(formRehack.target) }}
                    {{ form_row(formRehack.quantity) }}
                    {{ form_row(formRehack.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                    {{ form_end(formRehack) }}
                {% endif %}
            {% endif %}
            </div>
        </div>
    </div>
{% endblock %}