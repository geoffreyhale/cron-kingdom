{% extends '::base.html.twig' %}

{% block content %}
    <div class="row-fluid">
        <div class="col-sm-12">
            <ol class="breadcrumb">
                <li><a href="{{ path('homepage') }}">Dashboard</a></li>
                <li class="active">{{ verb|capitalize }} {{ resource|capitalize }}</li>
            </ol>

            <h3>{{ verb|capitalize }} {{ resource|capitalize }}</h3>
            <hr />
        </div>
    </div>

    <div class="row-fluid">
        <div class="col-sm-12">
            <div class="alert alert-info">
                <p><strong>{{ resource|capitalize }}: </strong><em>{{ resourceDescription }}</em></p>
                <hr />
                <p>{{ actionDescription }}</p>
                <p>&nbsp;</p>
                <p>
                    <strong>Max {{ resource|capitalize }} to {{ verb }}: {{ maxQuantity }}</strong>
                </p>
                <p>
                    <button id="autoFillBtn" data-max="{{ maxQuantity }}" class="btn btn-info">Auto-Fill Max</button>
                </p>
            </div>
        </div>
    </div>

    <div class="row-fluid">
        <div class="col-sm-12">
            {{ form_start(form, {'attr': {'class': 'form-inline'}}) }}
            <div class="form-group">
                {{ form_row(form.quantity, {'attr': {'class': 'form-control', 'max': maxQuantity}}) }}
            </div>
            <div class="form-group">
            {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block js %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function() {
            $('#autoFillBtn').click(function() {
                console.log($(this).data('max'));
                $('#cronkdbundle_action_quantity').val($(this).data('max'));
            })
        })
    </script>
{% endblock %}