{% if action is not defined %}
    {% set action = 'Submit' %}
{% endif %}

{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
<div class="row-fluid">
    <div class="col-md-4">
        <div class="form-group col-md-12">
            {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group col-md-12">
            {{ form_row(form.type, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group col-md-12">
            {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="col-md-8">
        <div class="row-fluid">
            <div class="col-md-4">
                <div class="form-group">
                    {{ form_row(form.canBeProduced, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    {{ form_row(form.canBeProbed, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    {{ form_row(form.spoilOfWar, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            {{ form_row(form.value, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            {{ form_row(form.startingAmount, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            {{ form_row(form.capacity, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            {{ form_row(form.attack, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            {{ form_row(form.defense, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            {{ form_row(form.probePower, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row-fluid">
    <div class="col-md-12">
        <div class="form-group">
            {{ form_widget(form.submit, {'label': action, 'attr': {'class': 'btn btn-primary'}}) }}
        </div>
    </div>
</div>
<hr />
{{ form_end(form) }}