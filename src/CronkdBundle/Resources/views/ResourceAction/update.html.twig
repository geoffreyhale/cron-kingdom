{% extends '::base.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="col-sm-12">

                <ol class="breadcrumb">
                    <li><a href="{{ path('world_configure', {'world': world.id}) }}">Configure {{ world.name }}</a></li>
                    <li><a href="{{ path('resource_update', {'id': resource.id}) }}">Update {{ resource.name }}</a></li>
                    <li class="active">Update {{ resourceAction.verb }}</li>
                </ol>

                <div class="pull-right">
                    <a href="{{ path('resource_action_input_index', {'id': resourceAction.id}) }}" class="btn btn-info"><i class="fa fa-cogs"></i> Manage Inputs</a>
                </div>
                <h1>Update {{ resourceAction.verb }}</h1>
                {% include 'CronkdBundle:ResourceAction/partials:form.html.twig' with {'action': 'Update'} %}
            </div>
        </div>
    </div>

{% endblock %}
