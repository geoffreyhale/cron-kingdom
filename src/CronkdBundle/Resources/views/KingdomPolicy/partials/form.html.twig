{% if action is not defined %}
    {% set action = 'Submit' %}
{% endif %}

{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
<div class="row-fluid">
    <div class="col-md-4">
        <div class="form-group col-md-12">
            {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group col-md-12">
            {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="col-md-8">
        <div class="row-fluid">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            {{ form_errors(form.attackMultiplier) }}
                            {{ form_label(form.attackMultiplier) }}
                            <div class="input-group">
                                {{ form_widget(form.attackMultiplier, {'attr': {'class': 'form-control'}}) }}
                                <span class="input-group-addon">%</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            {{ form_errors(form.defenseMultiplier) }}
                            {{ form_label(form.defenseMultiplier) }}
                            <div class="input-group">
                                {{ form_widget(form.defenseMultiplier, {'attr': {'class': 'form-control'}}) }}
                                <span class="input-group-addon">%</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            {{ form_errors(form.probePowerMultiplier) }}
                            {{ form_label(form.probePowerMultiplier) }}
                            <div class="input-group">
                                {{ form_widget(form.probePowerMultiplier, {'attr': {'class': 'form-control'}}) }}
                                <span class="input-group-addon">%</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            {{ form_errors(form.capacityMultiplier) }}
                            {{ form_label(form.capacityMultiplier) }}
                            <div class="input-group">
                                {{ form_widget(form.capacityMultiplier, {'attr': {'class': 'form-control'}}) }}
                                <span class="input-group-addon">%</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            {{ form_errors(form.outputMultiplier) }}
                            {{ form_label(form.outputMultiplier) }}
                            <div class="input-group">
                                {{ form_widget(form.outputMultiplier, {'attr': {'class': 'form-control'}}) }}
                                <span class="input-group-addon">%</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            {{ form_row(form.queueSizeModifier, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            {{ form_errors(form.spoilOfWarAttackCaptureMultiplier) }}
                            {{ form_label(form.spoilOfWarAttackCaptureMultiplier) }}
                            <div class="input-group">
                                {{ form_widget(form.spoilOfWarAttackCaptureMultiplier, {'attr': {'class': 'form-control'}}) }}
                                <span class="input-group-addon">%</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            {{ form_errors(form.spoilOfWarDefenseCaptureMultiplier) }}
                            {{ form_label(form.spoilOfWarDefenseCaptureMultiplier) }}
                            <div class="input-group">
                                {{ form_widget(form.spoilOfWarDefenseCaptureMultiplier, {'attr': {'class': 'form-control'}}) }}
                                <span class="input-group-addon">%</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row-fluid">
    <div class="col-md-12">
        <div class="form-group">
            {{ form_widget(form.submit, {'label': action, 'attr': {'class': 'btn btn-primary'}}) }}
        </div>
    </div>
</div>
<hr />
{{ form_end(form) }}