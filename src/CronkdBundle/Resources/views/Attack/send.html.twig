{% extends '::base.html.twig' %}

{% block content %}
    <div class="row-fluid">
        <div class="col-sm-12">
            <ol class="breadcrumb">
                <li><a href="{{ path('homepage') }}">Dashboard</a></li>
                <li class="active">Plan Attack</li>
            </ol>

            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            <h3>Plan Attack</h3>
            <hr />
            <div class="alert alert-info">
                <p>Send military units to attack another Kingdom.  Use caution: you may only attack once per Tick!</p>
                <p>
                    <ul>
                    {% for resourceName,resource in resources %}
                        {% if resource.attack > 0 and kingdomState.hasAvailableResource(resourceName) %}
                            <strong>{{ resourceName }}</strong>: {{ resource.attack }} attack each | {{ kingdomState.availableResourceQuantity(resourceName) }} available<br />
                        {% endif %}
                    {% endfor %}
                    </ul>
                </p>
            </div>

            <div class="row-fluid">
                <div class="col-sm-12 col-md-6">
                    <div class="form-group">
                        {{ form_row(form.target, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {% for resource in kingdomState.resources %}
                            {% if kingdomState.hasAvailableResource(resource.resource.name) and attribute(form, resource.resource.name) is defined %}
                                {{ form_row(attribute(form, resource.resource.name), {'attr': {'class': 'form-control'}}) }}
                            {% endif %}
                        {% endfor %}            </div>
                    <div class="form-group">
                        {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}