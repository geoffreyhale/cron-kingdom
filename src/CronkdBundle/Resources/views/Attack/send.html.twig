{% extends '::base.html.twig' %}

{% block content %}
    <div class="row-fluid">
        <div class="col-sm-12">
            <ol class="breadcrumb">
                <li><a href="{{ path('homepage') }}">Dashboard</a></li>
                <li class="active">Attack</li>
            </ol>

            <h3>Attack</h3>
            <hr/>
            <div class="alert alert-info">
                <p>Send military units to attack another Kingdom. Use caution: you may only attack once per Tick!</p>
                <ul>
                    {% for resource in resources %}
                        {% if resource.attack > 0 and kingdomState.hasAvailableResource(resource.name) %}
                            <strong>{{ resource.name }}</strong>: {{ resource.attack }} attack each | {{ kingdomState.availableResourceQuantity(resource.name) }} available
                            <br/>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>

            <div class="row-fluid">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.target, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {% for resource in kingdomState.resources %}
                        {% if kingdomState.hasAvailableResource(resource.resource.name) and attribute(form, resource.resource.name) is defined %}
                            {{ form_row(attribute(form, resource.resource.name), {'attr': {'class': 'form-control'}}) }}
                        {% endif %}
                    {% endfor %}
                </div>
                <div class="form-group">
                    {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}