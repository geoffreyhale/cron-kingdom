{% if worlds|length > 0 %}
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>World Name</th>
            <th>Kingdoms</th>
            <th>Start Time</th>
            <th>End Time</th>
        </tr>
        </thead>
        <tbody>
        {% for world in worlds %}
            <tr>
                <td>
                    {% if is_granted("ROLE_ADMIN") %}
                        <div class="pull-right"><a href="{{ path('world_configure', {'world': world.id}) }}"><i class="fa fa-cogs"></i></a></div>
                    {% endif %}
                    <a href="{{ path('world_show', {'id': world.id}) }}">{{ world.name }}</a>
                </td>
                <td>{{ world.kingdoms|length }}</td>
                <td>{{ world.startTime|date('Y-m-d h:i A') }}</td>
                <td>{{ world.endTime|date('Y-m-d h:i A') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endif %}