{% extends '::base.html.twig' %}

{% block content %}
    {% if not userHasKingdom %}
        <div class="row-fluid text-center">
            <div class="text-center">
                <a href="{{ path('kingdom_create') }}" class="btn btn-primary btn-lg">Create My Kingdom</a>
            </div>
        </div>
    {% else %}
        <div class="row-fluid">
            <div class="row clearfix">
                <div class="col-md-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><i class="fa fa-line-chart"></i> Networth</h3>
                        </div>
                        {% include 'CronkdBundle:World:partials/kingdomsByNetworth.html.twig' %}
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><i class="fa fa-trophy"></i> ELO</h3>
                        </div>
                        {% include 'CronkdBundle:World:partials/kingdomsByElo.html.twig' %}
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Win - Loss</h3>
                        </div>
                        {% include 'CronkdBundle:World:partials/kingdomsByWinLoss.html.twig' %}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}